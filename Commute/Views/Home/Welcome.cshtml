@using Commute.Properties

@{
    Layout = "~/Views/Shared/_Mobile.cshtml";
    ViewBag.Title = @Resources.Welcome;
    ViewBag.Metadesc = Resources.Metadesc_home_welcome;
}

@Html.Raw( @Resources.Welcome_message.Replace("Commute", "<b>Commute</b>") )
<br>
@Html.Raw( @Resources.Welcome_join.Replace("Commute", "<b>Commute</b>") )
<a href="/User/Register" data-role="button" data-ajax="false" data-inline="true" data-mini="true">@Resources.Register</a>
<p>
@Html.Raw( @Resources.Welcome_help.Replace("Commute", "<b>Commute</b>") )
<a href="/Help/Help?helpFile=Commute documentation.html" data-role="button" data-ajax="false" data-inline="true" data-mini="true">@Resources.Help</a>
</p>
<p>
@Html.Raw( @Resources.Welcome_view_route.Replace("\r\n", "<br>") )
<a href="/Route/SearchAll" data-role="button" data-ajax="false" data-inline="true" data-mini="true">@Resources.Route_search</a>
</p>
<p>
@Resources.Welcome_login_button_press <a href="/User/Login/" data-role="button" data-ajax="false" data-mini="true" data-inline="true" data-icon="home" data-iconpos="notext" data-theme="b" title="@Resources.Login"></a> @Html.Raw( @Resources.Welcome_login_button.Replace("Commute", "<b>Commute</b>") )
</p>