@model IEnumerable<Commute.Models.Route>
@using Commute.Properties

@{
    Layout = "~/Views/Shared/_Mobile.cshtml";
    ViewBag.Title = @Resources.Welcome;
    ViewBag.Metadesc = Resources.Metadesc_route_list;
}


    <div>
        <a href="/Route/CreateUpdate/" id="btnRouteAdd" data-role="button" data-mini="true" data-ajax="false" data-theme="b" data-inline="true" >@Resources.Route_new</a>
    </div>
@foreach (var item in Model) {
    <div>
        <div id="divRouteButton" class="inline">
            @if (item.IsOffer) {
            <a href="/Route/CreateUpdate/@item.Id" data-ajax="false" data-role="button" data-inline="true" class = "offer">@item.Id - @item.Name</a> }
                                                                                                                                                    else {
            <a href="/Route/CreateUpdate/@item.Id" data-ajax="false" data-role="button" data-inline="true" class = "seek">@item.Id - @item.Name</a> }
        </div>
        <div id="divSearchButton" class="inline">
            <a href="/Route/Search/@item.Id" data-ajax="false" data-role="button" data-icon="search" data-theme="b" data-iconpos="notext" data-inline="true"></a> @*&nbsp;*@
        </div>
    </div>
}

<script>
    jQuery(document).ready(function () {
        //Remove the padding to save space on screen
        $(".ui-content").css("padding", "0px");
        //Almost no padding for route button (more space for route name)
        $('#divRouteButton .ui-btn-inner').css("padding-left", "2px");
        $('#divRouteButton .ui-btn-inner').css("padding-right", "2px");
        //Reduce font size for route button, allow text to wrap
        $('#divRouteButton .ui-btn-text').css("font-size", "0.6em");
        $('#divRouteButton .ui-btn-text').css("white-space", "normal");
        //Add padding to the search button
        $('#divSearchButton .ui-btn').css("padding", "5px");
    });
</script>
