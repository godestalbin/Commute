@using Commute.Properties
<!DOCTYPE html> 
<html> 
<head> 
	<title>@ViewBag.title</title> 

    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
	<meta name="viewport" content="width=device-width, initial-scale=1"> 
    <meta name="description" content="Share your car to commute between home and work with others or find a car in your area to commute to work. Going to work can be fun: Save fuel, save money and make new friends to share a happy time when commuting from home to work and from work to home. This is the green way to go to work. Help saving the planet. Reduce gaz emission" />
    <link rel="shortcut icon" type="image/png" href="/Content/Images/Blue car 32px.png">
    <link rel="apple-touch-icon" href="/Content/Images/Blue car 32px.png"/> @*Shortcut for web app link (iPhone & android)*@

@*    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" />
    <script src="http://code.jquery.com/jquery-1.8.2.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js"></script>*@
    <link rel="stylesheet" href="/Content/UImobile/jquery.mobile-1.2.0.min.css" />
    <script src="/Scripts/jquery-1.8.2.min.js"></script>
    <script src="/Scripts/jquery.mobile-1.2.0.min.js"></script>
</head> 
<body> 

<div data-role="page">

	<div <div class="ui-bar ui-bar-b">
        <div class="ui-grid-b">
            <div class="ui-block-a"><a href="#popupNested" data-rel="popup" data-role="button" data-mini="true" data-inline="true">@Resources.Menu</a></div>
		    <div class="ui-block-b"><h4>@ViewBag.title</h4></div>
            <div class="ui-block-c">@ViewBag.userId - @ViewBag.userName</div>
        </div>
	</div>

    @*Menu to be defined later*@
    		<div data-role="popup" id="popupNested" data-theme="none">
			<div data-role="collapsible-set" data-theme="b" data-content-theme="c" data-collapsed-icon="arrow-r" data-expanded-icon="arrow-d" style="margin:0; width:250px;">
				<div data-role="collapsible" data-inset="false">
					<h2>@Resources.Route</h2>
					<ul data-role="listview">
						<li><a href="/Route/CreateUpdate"  data-ajax="false">@Resources.Route_new</a></li>
						<li><a href="/Route/ListMobile?userId=@ViewBag.userId"  data-ajax="false">@Resources.Route_list</a></li>
						<li><a href="/Route/List?userId=@ViewBag.userId"  data-ajax="false">@Resources.Route_list</a></li>
					</ul>
				</div><!-- /collapsible -->
				<div data-role="collapsible" data-inset="false">
					<h2>@Resources.User</h2>
					<ul data-role="listview">
						<li><a href="/User/Edit"  data-ajax="false">@Resources.User_account</a></li>
						<li><a href="/User/Register"  data-ajax="false">@Resources.User_registration</a></li>
						<li><a href="/User/LoginMobile"  data-ajax="false">@Resources.User_login</a></li>
						<li><a href="/User/Logout"  data-ajax="false">@Resources.User_logout</a></li>
					</ul>
				</div><!-- /collapsible -->
				<div data-role="collapsible" data-inset="false">
					<h2>Ocean Creatures</h2>
					<ul data-role="listview">
						<li><a href="/Home/NotImplemented" data-rel="dialog" class="ui-btn-right">Fish</a></li>
						<li><a href="../dialog.html" data-rel="dialog">Octopus</a></li>
						<li><a href="../dialog.html" data-rel="dialog">Shark</a></li>
						<li><a href="../dialog.html" data-rel="dialog">Starfish</a></li>
					</ul>
				</div><!-- /collapsible -->
				<div data-role="collapsible" data-inset="false">
					<h2>Wild Animals</h2>
					<ul data-role="listview">
						<li><a href="../dialog.html" data-rel="dialog">Lion</a></li>
						<li><a href="../dialog.html" data-rel="dialog">Monkey</a></li>
						<li><a href="../dialog.html" data-rel="dialog">Tiger</a></li>
						<li><a href="../dialog.html" data-rel="dialog">Zebra</a></li>
					</ul>
				</div><!-- /collapsible -->
			</div><!-- /collapsible set -->
		</div><!-- /popup -->

	<div data-role="content">
        @RenderBody()
	</div><!-- /content -->

</div><!-- /page -->
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyC0KjUdM6DpNQAggngGkuKLFvoHw-lJ0H4&sensor=false"></script>
</body>
</html>